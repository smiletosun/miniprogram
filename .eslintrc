{
  "extends": [
    "taro"
  ],
  "root": true,
  "rules": {
    "no-console": [0],
    "quotes": ["error", "double"],
    "react/react-in-jsx-scope": 0,
    "consistent-return": 2,
    "indent"           : [1, 2],
    "no-else-return"   : 1,
    "semi"             : [1, "always"],
    "space-unary-ops"  : 2,
    "space-infix-ops": "error",
    "no-unused-vars": 1,
    "jsx-quotes": ["error", "prefer-double"]
  }
}
